<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.computerpower.student.australianweatherapp.PreferenceActivity" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/my_settings"
        android:textSize="24sp" />

    <Spinner
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:entries="@array/city_array"
        android:layout_marginBottom="5dp"
         />

    <Spinner
        android:id="@+id/measurement"
        android:layout_width="wrap_content"
       	android:layout_height="40dp"
       	android:background="#FFFFFF"
        android:entries="@array/measure_array"
        android:layout_marginBottom="5dp"
         />

    <Spinner
        android:id="@+id/fontcolour"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="#FFFFFF"
        android:entries="@array/font_colour_array"
        android:layout_marginBottom="5dp"/>

    <Button
        android:id="@+id/btnsavepref"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/save_preferences"
        /> 
    <Button
        android:id="@+id/btngetweather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@+string/get_weather" 
        android:onClick="GetWeather"
         
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/user_selection"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />
    <TextView 
		android:id="@+id/selection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:text="@string/user_selection"
        android:textSize="18sp" />  
</LinearLayout>
